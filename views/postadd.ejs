<% include header %>
<!--		
====================================
			Create Post
=====================================
-->			
<div class="row">
	<div class="small-12 columns">
		<p> </p>
	</div>
	<div class="small-12 columns">
		<h1 class="text-center">Create Post</h1>
	</div>
	<div class="small-12 columns">
<!--						
		Form Start
-->
		<form action="/posts/createaction" method="get">	

			<div class="row">
				<div class="large-12 columns">
					<div class="row collapse">						
<!--						
						Author
-->
						<input name="author" type="text" placeholder="Author">
					</div>
				</div>
			</div>

			<div class="row">
				<div class="large-12 columns">
					<div class="row collapse">

<!--						
						Category
-->
						<select name="category">
							<option default>Select a Category...</option>
							<option>General</option>
						</select>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="large-12 columns">
					<div class="row collapse">
<!--						
						Title
-->
						<input name="title" type="text" placeholder="Title">
					</div>
				</div>
			</div>

			<div class="row">
				<div class="large-12 columns">
					<div class="row collapse">
<!--						
							Text
-->
							<textarea name="content" placeholder="Write your post here..."></textarea>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="large-12 columns">
					<div class="row collapse">
<!--						
						Submit
-->
						<input class="small-12 columns submit button [radius round]" type="submit" value="Publish">
					</div>
				</div>
			</div>
		</form>
	</div>
</div>
<% include footer %>